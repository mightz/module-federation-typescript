{
  "compilerOptions": {
    "alwaysStrict": true,
    "baseUrl": "./",
    "jsx": "react",
    "lib": ["es2021", "dom"],
    "module": "ES2020",
    "outDir": "./dist",
    "removeComments": true,
    "rootDir": "src",
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es5",
    "paths": {
      "@/*": ["src/*"],
    },
    "allowUnreachableCode": false,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "strictFunctionTypes": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "dist", "scripts", "src/assets"]
}